{
  "name": "requirex",
  "version": "0.1.0",
  "description": "A different kind of module loader",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "browser": "dist/umd/index.js",
  "typings": "dist/esm/index.d.ts",
  "bin": {
    "requirex": "./bin/requirex"
  },
  "scripts": {
    "tsc": "tsc",
    "start": "./serve.bat",
    "build": "npm run build:esm && npm run build:commonjs",
    "build:esm": "tsc -p src/tsconfig.esm.json",
    "build:commonjs": "tsc -p src/tsconfig.cjs.json",
    "build:test": "tsc -p test/tsconfig.json",
    "prepublish": "npm run build && (checkver lt 5.0.0 || rollup -c) && uglifyjs dist/umd/index.js -c -m > dist/umd/index.min.js",
    "example": "node bin/requirex ./example/node-target.ts",
    "test": "nyc --extension .ts npm run test:no-spec | tap-spec && nyc report --reporter=text-lcov > coverage.lcov",
    "test:no-spec": "npm run build:test && NODE_ENV=test node_modules/tape/bin/tape dist/test/test/**/*.test.js"
  },
  "author": "Juha JÃ¤rvi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/requirex/requirex.git"
  },
  "bugs": {
    "url": "https://github.com/requirex/requirex/issues"
  },
  "homepage": "https://github.com/requirex/requirex#readme",
  "keywords": [
    "amd",
    "cjs",
    "loader",
    "require",
    "requirejs",
    "system",
    "systemjs"
  ],
  "devDependencies": {
    "@types/blue-tape": "^0.1.32",
    "@types/node": "^11.11.3",
    "autoroll": "^0.2.0",
    "blue-tape": "^1.0.0",
    "nyc": "^14.1.1",
    "rollup": "^1.6.0",
    "tap-spec": "^5.0.0",
    "typescript": "^3.4",
    "uglify-js": "^3.5.1"
  },
  "dependencies": {
    "tslib": "^1.9.3"
  }
}
